@model FirstDbMVCApp.Models.ViewModels.CUStudentVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

    //SelectList courseList = (SelectList)ViewData["CourseId"];
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Student.Id" />
            <div class="form-group">
                <label asp-for="@Model.Student.FullName" class="control-label"></label>
                <input asp-for="@Model.Student.FullName" class="form-control" />
                <span asp-validation-for="@Model.Student.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Select course" class="control-label">Select course</label>
                <select asp-for="@Model.SelectedCourseId" asp-items=@Model.SelectItems class="form-control"></select>
                <span asp-validation-for="@Model.SelectItems" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
