
@model dynamic

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Playlist</h4>
    <hr />

    <a asp-controller="Songs" asp-action="Index" class="btn btn-primary">See all songs</a>
    <dl class="row">
        <dt class = "col-sm-2">
            Title
        </dt>
        <dd class = "col-sm-10">
            @Model.Playlist.Title
        </dd>
    </dl>
</div>
<div>
    <h4>@ViewBag.Header</h4>
    <hr />

     <table class="table">
            <thead>
                <tr>
                    <th>
                    Title
                    </th>
                    <th>
                    Length In Seconds
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (Song song in Model.Songs)
        {
                        <tr>
                            <td>
                               
                    @Html.DisplayFor(modelItem => @song.Title)
                            </td>
                            <td>
                    @Html.DisplayFor(modelItem => @song.LengthInSeconds)
                            </td>
                            <td>
                                <a asp-controller="Albums" asp-action="Index" asp-route-id="@song.AlbumID">See Album</a> |
                                <a  asp-action="Delete" asp-route-id="@song.Id">Remove Song</a>
                            </td>
                        </tr>
        }
            </tbody> 
        </table>

</div>
<div>
    <a asp-controller="Playlists" asp-action="Index">Back to List</a>
</div>
